<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dream.Views.RegisterPage"
             xmlns:viewModels="clr-namespace:Dream.ViewModels"
             xmlns:i18n="clr-namespace:DreamMobile.Extensions;assembly=DreamMobile"
              xmlns:behaviors ="clr-namespace:DreamMobile.Validators">
    <ContentPage.BindingContext>
        <viewModels:RegisterViewModel/>
    </ContentPage.BindingContext>

    <StackLayout Orientation="Vertical"
                 VerticalOptions="Center" 
                 Spacing="30"
                 Padding="30">

        <Entry Text="{Binding Email}" 
               Placeholder="{i18n:Translate EmailPlaceholder}"
               FontSize="30"
               x:Name="EmailEntry">
            <Entry.Behaviors>
                <behaviors:EmailValidationBehavior/>
            </Entry.Behaviors>
        </Entry>

        <Entry Text="{Binding Password}"
               Placeholder="{i18n:Translate Password}"
               x:Name="Password"
               IsPassword="True"
               FontSize="30"
               >
            <Entry.Behaviors>
                <behaviors:PasswordValidationBehavior/>
            </Entry.Behaviors>
        </Entry>
        <Entry Text="{Binding ConfirmPassword}" 
               Placeholder="{i18n:Translate ConfirmPassword}"
               x:Name="ConfirmPassword"
               IsPassword="True"
               FontSize="30">
            <Entry.Behaviors>
                <behaviors:PasswordValidationBehavior/>
            </Entry.Behaviors>
        </Entry>

        <Label x:Name="ErrorLable"
               TextColor="Red"
               FontSize="Medium"/>
        <Button Command="{Binding RegisterCommand}"
                Text="Register"
                TextColor="White"
                BackgroundColor="Crimson"
                FontSize="30"
                Clicked="Button_Clicked"/>

        <Button Text="Go to login Page"
                Clicked="Button_Clicked_1"/>

    </StackLayout>
</ContentPage>